---
import '@/styles/global.css';
import Navbar from '@/components/common/Navbar.astro';
import Footer from '@/components/common/Footer.astro';
import SEO from '@/components/common/SEO.astro';
import { businessStructuredData } from '@/utils';
import type { LayoutProps } from '@/utils';
import { ClientRouter } from 'astro:transitions';
const {
  title,
  description = "The Content Studio - Tu espacio creativo para sesiones de fotos, rodajes, podcast y eventos especiales.",
  image,
  canonical,
  type
}: LayoutProps = Astro.props as LayoutProps;
---

<!doctype html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="generator" content={Astro.generator} />
  
  <!-- Performance hints -->
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  
  <!-- Critical CSS inline para mejorar FCP -->
  <style>
    /* Critical above-the-fold styles */
    body{margin:0;font-family:'Outfit',sans-serif;line-height:1.6}
    .min-h-screen{min-height:100vh}
    .flex{display:flex}
    .flex-col{flex-direction:column}
    .flex-grow{flex-grow:1}
    .relative{position:relative}
    .absolute{position:absolute}
    .inset-0{top:0;right:0;bottom:0;left:0}
    .w-full{width:100%}
    .h-full{height:100%}
    .object-cover{object-fit:cover}
    .z-10{z-index:10}
    .text-center{text-align:center}
    .text-4xl{font-size:2.25rem;line-height:2.5rem}
    .font-bold{font-weight:700}
    .mb-6{margin-bottom:1.5rem}
    .text-white{color:#fff}
    /* Loading optimization */
    img{transition:opacity 0.3s}
    .hero-image{opacity:0}
    .hero-image.loaded{opacity:1}
    @media(min-width:768px){.text-6xl{font-size:3.75rem;line-height:1}}
  </style>
  
  <!-- Favicons -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  <link rel="manifest" href="/site.webmanifest" />
  
  <!-- Preconnect removido ya que usamos fuentes auto-hospedadas -->
  
  <!-- Preload imagen LCP crítica - removido por usar imports optimizados -->
  
  <!-- Astro:assets maneja el preload automáticamente con priority -->
  
  <!-- Preload fuentes críticas con font-display: swap -->
  <link rel="preload" href="/fonts/outfit-regular.woff2" as="font" type="font/woff2" crossorigin>
  <link rel="preload" href="/fonts/instrument-serif-regular.woff2" as="font" type="font/woff2" crossorigin>
  
  <!-- Prefetch fuente secundaria -->
  <link rel="prefetch" href="/fonts/outfit-300.woff2" as="font" type="font/woff2" crossorigin>
  
  
  <SEO
    title={title}
    description={description}
    image={image}
    canonical={canonical}
    type={type}
  />
  <ClientRouter fallback="swap" />
  <script type="application/ld+json" is:inline set:html={JSON.stringify(businessStructuredData)}></script>
</head>
<body>
  <div class="flex flex-col min-h-screen">
    <Navbar />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
  </div>
</body>
</html>