---
import '@/styles/global.css';
import Navbar from '@/components/common/Navbar.astro';
import Footer from '@/components/common/Footer.astro';
import SEO from '@/components/common/SEO.astro';
import { businessStructuredData } from '@/utils';
import type { LayoutProps } from '@/utils';
import { ClientRouter } from 'astro:transitions';
const {
  title,
  description = "The Content Studio - Tu espacio creativo para sesiones de fotos, rodajes, podcast y eventos especiales.",
  image,
  canonical,
  type
}: LayoutProps = Astro.props as LayoutProps;
---

<!doctype html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <meta name="generator" content={Astro.generator} />
  
  <!-- Favicons -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  <link rel="manifest" href="/site.webmanifest" />
  
  <!-- Preconnect removido ya que usamos fuentes auto-hospedadas -->
  
  <!-- Preload imagen LCP crítica -->
  <link rel="preload" as="image" href="/images/spaces/principal-optimized.webp" fetchpriority="high" imagesizes="100vw" />
  
  <!-- Preload solo de la fuente más crítica para reducir cadenas de solicitud -->
  <link rel="preload" href="/fonts/outfit-regular.woff2" as="font" type="font/woff2" crossorigin fetchpriority="high">
  
  <!-- Prefetch de fuentes secundarias para navegación futura -->
  <link rel="prefetch" href="/fonts/instrument-serif-regular.woff2" as="font" type="font/woff2" crossorigin>
  <link rel="prefetch" href="/fonts/outfit-300.woff2" as="font" type="font/woff2" crossorigin>
  
  
  <SEO
    title={title}
    description={description}
    image={image}
    canonical={canonical}
    type={type}
  />
  <ClientRouter />
  <script type="application/ld+json" set:html={JSON.stringify(businessStructuredData)}></script>
</head>
<body>
  <div class="flex flex-col min-h-screen">
    <Navbar />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
  </div>
</body>
</html>