---
import CtaSection from '@/components/common/CtaSection.astro';
import OptimizedHeroSection from '@/components/common/OptimizedHeroSection.astro';
import GalleryShowcase from '@/components/home/GalleryShowcase.astro';
import TargetSection from '@/components/home/TargetSection.astro';
import Layout from '@/layouts/Layout.astro';
import { CTA_CONTENT, HERO_CONTENT } from '@/utils';

---

<Layout
  title="Alquiler Estudio Fotográfico en Sevilla - Ciclorama y Podcast"
  description="Estudio profesional en Sevilla: ciclorama 6x4m, zona podcast, fondos de colores. Alquiler por horas para fotografía, video y contenido audiovisual. ¡Reserva online!"
>
  <OptimizedHeroSection
    title={HERO_CONTENT.home.title}
    description={HERO_CONTENT.home.description}
    buttonText={HERO_CONTENT.home.buttonText}
    buttonHref={HERO_CONTENT.home.buttonHref}
    heightClass='h-[60vh] md:h-[75vh]'
    overlayClass="bg-primary-black/60"
    titleClass="text-primary-white"
    descriptionClass='text-primary-white'
    buttonVariant="custom"
    buttonClass="bg-primary-black text-primary-white hover:bg-primary-beige hover:text-primary-black transition-colors shadow-lg"
  />
  <TargetSection />
  <GalleryShowcase />
  <CtaSection
    title={CTA_CONTENT.readyToCreate.title}
    description={CTA_CONTENT.readyToCreate.description}
    primaryText={CTA_CONTENT.readyToCreate.primaryText}
    primaryHref={CTA_CONTENT.readyToCreate.primaryHref}
    secondaryText="Contactar"
    secondaryHref="/contact"
    bgClass="bg-primary-beige-200"
    titleClass="text-primary-black"
    descriptionClass="mt-4 text-primary-black"
    primaryBtnVariant="custom"
    primaryBtnClass="bg-primary-black text-primary-white hover:bg-primary-beige hover:text-primary-black"
    secondaryBtnVariant="custom"
    secondaryBtnClass="bg-primary-white border-2 border-primary-beige-500 text-stone-700 hover:bg-primary-beige hover:text-primary-black hover:border-primary-beige-500 transition-colors"
  />
</Layout>