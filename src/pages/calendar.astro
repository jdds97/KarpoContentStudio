---
import Layout from '@/layouts/Layout.astro';
import HeroSection from '@/components/common/HeroSection.astro';
import BookingCalendar from '@/components/booking/BookingCalendar.astro';
---

<Layout title="Calendario de Disponibilidad">
  <HeroSection
    title="Calendario de Disponibilidad"
    description="Consulta la disponibilidad de nuestros espacios y reserva tu sesión en tiempo real."
    image=""
    overlayClass="bg-primary-beige"
    textClass="text-primary-black"
    buttonText=""
  />
  
  <section class="section-padding bg-primary-white">
    <div class="container mx-auto container-padding max-w-6xl">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Calendario principal -->
        <div class="lg:col-span-2">
          <BookingCalendar />
        </div>
        
        <!-- Información lateral -->
        <div class="space-y-6">
          <!-- Información de horarios -->
          <div class="bg-primary-beige/20 p-6 rounded-lg">
            <h3 class="text-lg font-instrument mb-4 text-primary-black">Horarios de Operación</h3>
            <div class="space-y-2 text-sm">
              <div class="flex justify-between">
                <span class="text-primary-gray">Lunes - Viernes:</span>
                <span class="text-primary-black font-medium">9:00 - 20:00</span>
              </div>
              <div class="flex justify-between">
                <span class="text-primary-gray">Sábado:</span>
                <span class="text-primary-black font-medium">10:00 - 18:00</span>
              </div>
              <div class="flex justify-between">
                <span class="text-primary-gray">Domingo:</span>
                <span class="text-primary-black font-medium">Cerrado</span>
              </div>
            </div>
          </div>
          
          <!-- Tipos de sesión -->
          <div class="bg-primary-white p-6 rounded-lg shadow-sm border border-secondary-lightgray/20">
            <h3 class="text-lg font-instrument mb-4 text-primary-black">Tipos de Sesión</h3>
            <div class="space-y-3 text-sm">
              <div class="flex items-center space-x-3">
                <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                <span class="text-primary-gray">Sesión de Fotos</span>
              </div>
              <div class="flex items-center space-x-3">
                <div class="w-3 h-3 bg-blue-500 rounded-full"></div>
                <span class="text-primary-gray">Grabación de Video</span>
              </div>
              <div class="flex items-center space-x-3">
                <div class="w-3 h-3 bg-purple-500 rounded-full"></div>
                <span class="text-primary-gray">Podcast</span>
              </div>
              <div class="flex items-center space-x-3">
                <div class="w-3 h-3 bg-orange-500 rounded-full"></div>
                <span class="text-primary-gray">Evento</span>
              </div>
            </div>
          </div>
          
          <!-- Duración de paquetes -->
          <div class="bg-primary-white p-6 rounded-lg shadow-sm border border-secondary-lightgray/20">
            <h3 class="text-lg font-instrument mb-4 text-primary-black">Duración de Paquetes</h3>
            <div class="space-y-2 text-sm">
              <div class="flex justify-between">
                <span class="text-primary-gray">2 horas</span>
                <span class="text-primary-black">Básico</span>
              </div>
              <div class="flex justify-between">
                <span class="text-primary-gray">4 horas</span>
                <span class="text-primary-black">Estándar</span>
              </div>
              <div class="flex justify-between">
                <span class="text-primary-gray">6 horas</span>
                <span class="text-primary-black">Premium</span>
              </div>
              <div class="flex justify-between">
                <span class="text-primary-gray">8 horas</span>
                <span class="text-primary-black">Profesional</span>
              </div>
              <div class="flex justify-between">
                <span class="text-primary-gray">Día completo</span>
                <span class="text-primary-black">Full Day</span>
              </div>
            </div>
          </div>
          
          <!-- Botón de reserva -->
          <div class="bg-primary-black p-6 rounded-lg text-center">
            <h3 class="text-lg font-instrument mb-3 text-primary-white">¿Listo para reservar?</h3>
            <p class="text-sm text-gray-300 mb-4">
              Selecciona un día disponible y crea tu reserva
            </p>
            <a 
              href="/booking"
              class="inline-block bg-primary-beige text-primary-black px-6 py-3 rounded-md font-medium hover:bg-primary-white transition-colors"
            >
              Hacer Reserva
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
