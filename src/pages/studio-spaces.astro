---
import Layout from '@/layouts/Layout.astro';
import HeroSection from '@/components/common/HeroSection.astro';
import StudioSpacesSection from '@/components/studio/StudioSpacesSection.astro';
import EquipmentSection from '@/components/studio/EquipmentSection.astro';
import CtaSection from '@/components/common/CtaSection.astro';
import { HERO_CONTENT, CTA_CONTENT } from '@/utils';
---

<Layout title="Estudio">
  <HeroSection
    title={HERO_CONTENT.studioSpaces.title}
    description={HERO_CONTENT.studioSpaces.description}
    image=""
    overlayClass="bg-primary-beige"
    textClass="text-primary-black"
    buttonText=""
    heightClass="h-[40vh] md:h-[50vh]"
  />
  <StudioSpacesSection />
  <EquipmentSection />
  <CtaSection 
    title={CTA_CONTENT.default.title}
    description={CTA_CONTENT.default.description}
    primaryText={CTA_CONTENT.default.primaryText}
    primaryHref={CTA_CONTENT.default.primaryHref}
    bgClass="bg-primary-black"
    titleClass='text-primary-white'
    primaryBtnVariant="custom"
    primaryBtnClass="bg-primary-white text-primary-black hover:bg-primary-beige hover:text-primary-gray"
  />
</Layout>