---
// P치gina de login para administradores
const { cookies, redirect } = Astro;

const accessToken = cookies.get("sb-access-token");
const refreshToken = cookies.get("sb-refresh-token");

if (accessToken && refreshToken) {
  return redirect("/admin/dashboard");
}
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Login - The Content Studio</title>
  <link href="/styles/global.css" rel="stylesheet">
</head>
<body class="bg-primary-beige min-h-screen flex items-center justify-center">
  <div class="bg-primary-white p-8 rounded-lg shadow-md w-full max-w-md">
    <div class="text-center mb-6">
      <img 
        src="/images/logos/logo-optimized.webp" 
        alt="The Content Studio" 
        class="h-12 mx-auto mb-4"
      />
      <h1 class="text-2xl font-instrument text-primary-black">Panel de Administraci칩n</h1>
    </div>
    
    <form action="/api/auth/signin" method="post" class="space-y-4">
      <div>
        <label for="email" class="block text-sm font-medium text-primary-gray mb-1">
          Email
        </label>
        <input 
          type="email" 
          name="email" 
          id="email" 
          required
          class="w-full px-3 py-2 border border-secondary-lightgray rounded-md focus:outline-none focus:ring-2 focus:ring-primary-beige"
        />
      </div>
      
      <div>
        <label for="password" class="block text-sm font-medium text-primary-gray mb-1">
          Contrase침a
        </label>
        <input 
          type="password" 
          name="password" 
          id="password" 
          required
          class="w-full px-3 py-2 border border-secondary-lightgray rounded-md focus:outline-none focus:ring-2 focus:ring-primary-beige"
        />
      </div>
      
      <button 
        type="submit"
        class="w-full bg-primary-black text-primary-white py-2 px-4 rounded-md hover:bg-primary-beige hover:text-primary-black transition-colors font-medium"
      >
        Iniciar Sesi칩n
      </button>
    </form>
  </div>
</body>
</html>
