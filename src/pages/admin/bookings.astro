---
// P√°gina de administraci√≥n para gestionar reservas
// Protegida con Supabase Auth
export const prerender = false;

import AdminLayout from '@/layouts/AdminLayout.astro';
import { createSupabaseAdmin, createSupabaseClient } from '@/lib/supabase';
import { actions } from 'astro:actions';
import { getGeneralError, isActionSuccess, getSuccessMessage } from '@/lib/form-helpers';

const { cookies, locals } = Astro;

// Verificar autenticaci√≥n con Supabase Auth
const accessToken = cookies.get("sb-access-token");
const refreshToken = cookies.get("sb-refresh-token");

if (!accessToken || !refreshToken) {
  return Astro.redirect("/admin/login");
}

// Verificar sesi√≥n v√°lida
const supabase = createSupabaseClient(locals?.runtime);
const { data: sessionData, error: sessionError } = await supabase.auth.setSession({
  refresh_token: refreshToken.value,
  access_token: accessToken.value,
});

if (sessionError) {
  cookies.delete("sb-access-token", { path: "/" });
  cookies.delete("sb-refresh-token", { path: "/" });
  return Astro.redirect("/admin/login");
}

const userEmail = sessionData?.user?.email;

// Obtener resultado de las actions si existen
const confirmResult = Astro.getActionResult(actions.confirmBooking);
const cancelResult = Astro.getActionResult(actions.cancelBooking);

// Obtener todas las reservas
const supabaseAdmin = createSupabaseAdmin(locals?.runtime);
const { data: bookings, error } = await supabaseAdmin
  .from('bookings')
  .select('*')
  .order('created_at', { ascending: false })
  .limit(100);

if (error) {
  console.error('Error fetching bookings:', error);
}

// Estad√≠sticas
const pendingCount = bookings?.filter(b => b.status === 'pending').length || 0;
const confirmedCount = bookings?.filter(b => b.status === 'confirmed').length || 0;
const cancelledCount = bookings?.filter(b => b.status === 'cancelled').length || 0;
---

<AdminLayout title="Gesti√≥n de Reservas - The Content Studio" userEmail={userEmail}>
  <div class="min-h-screen bg-gray-50 py-8">
    <div class="container mx-auto px-4">
      <!-- Header -->
      <div class="mb-8">
        <div class="flex justify-between items-center">
          <div>
            <h1 class="text-3xl font-bold text-gray-900 mb-2">
              üìã Gesti√≥n de Reservas
            </h1>
            <p class="text-gray-600">
              Confirma, edita o cancela las reservas del estudio
            </p>
          </div>
          <a
            href="/admin/dashboard"
            class="inline-flex items-center px-4 py-2 bg-primary-black text-white rounded-lg hover:bg-primary-beige hover:text-primary-black transition-colors"
          >
            ‚Üê Volver al Dashboard
          </a>
        </div>
      </div>

      <!-- Mensajes de confirmaci√≥n/error -->
      {isActionSuccess(confirmResult) && (
        <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg">
          <div class="flex items-start">
            <svg class="w-5 h-5 text-green-600 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
            </svg>
            <div>
              <h3 class="text-green-800 font-medium">¬°Reserva Confirmada!</h3>
              <p class="text-green-700 mt-1">{getSuccessMessage(confirmResult)}</p>
            </div>
          </div>
        </div>
      )}

      {getGeneralError(confirmResult) && (
        <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
          <div class="flex items-start">
            <svg class="w-5 h-5 text-red-600 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
            </svg>
            <div>
              <h3 class="text-red-800 font-medium">Error</h3>
              <p class="text-red-700 mt-1">{getGeneralError(confirmResult)}</p>
            </div>
          </div>
        </div>
      )}

      {isActionSuccess(cancelResult) && (
        <div class="mb-6 p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
          <div class="flex items-start">
            <svg class="w-5 h-5 text-yellow-600 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
            </svg>
            <div>
              <h3 class="text-yellow-800 font-medium">Reserva Cancelada</h3>
              <p class="text-yellow-700 mt-1">{getSuccessMessage(cancelResult)}</p>
            </div>
          </div>
        </div>
      )}

      <!-- Estad√≠sticas r√°pidas -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-white p-6 rounded-lg shadow-sm border-l-4 border-yellow-500">
          <h3 class="text-lg font-medium text-gray-900 mb-2">‚è≥ Pendientes</h3>
          <p class="text-3xl font-bold text-yellow-600">{pendingCount}</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-sm border-l-4 border-green-500">
          <h3 class="text-lg font-medium text-gray-900 mb-2">‚úÖ Confirmadas</h3>
          <p class="text-3xl font-bold text-green-600">{confirmedCount}</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-sm border-l-4 border-red-500">
          <h3 class="text-lg font-medium text-gray-900 mb-2">‚ùå Canceladas</h3>
          <p class="text-3xl font-bold text-red-600">{cancelledCount}</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-sm border-l-4 border-blue-500">
          <h3 class="text-lg font-medium text-gray-900 mb-2">üìä Total</h3>
          <p class="text-3xl font-bold text-blue-600">{bookings?.length || 0}</p>
        </div>
      </div>

      <!-- Filtros -->
      <div class="bg-white p-4 rounded-lg shadow-sm mb-6">
        <div class="flex flex-wrap gap-4 items-center">
          <label class="font-medium text-gray-700">Filtrar por:</label>
          <button id="filter-all" class="px-4 py-2 rounded-lg bg-primary-black text-white text-sm" data-filter="all">
            Todas
          </button>
          <button id="filter-pending" class="px-4 py-2 rounded-lg bg-gray-200 text-gray-700 text-sm hover:bg-yellow-100" data-filter="pending">
            Pendientes ({pendingCount})
          </button>
          <button id="filter-confirmed" class="px-4 py-2 rounded-lg bg-gray-200 text-gray-700 text-sm hover:bg-green-100" data-filter="confirmed">
            Confirmadas ({confirmedCount})
          </button>
          <button id="filter-cancelled" class="px-4 py-2 rounded-lg bg-gray-200 text-gray-700 text-sm hover:bg-red-100" data-filter="cancelled">
            Canceladas ({cancelledCount})
          </button>
        </div>
      </div>

      <!-- Lista de reservas -->
      <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-xl font-semibold text-gray-900">Reservas ({bookings?.length || 0})</h2>
        </div>

        {bookings && bookings.length > 0 ? (
          <div class="divide-y divide-gray-200" id="bookings-list">
            {bookings.map((booking) => (
              <div class="p-6 booking-item" data-status={booking.status}>
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <!-- Informaci√≥n del cliente -->
                    <div class="flex items-center mb-2 flex-wrap gap-2">
                      <h3 class="text-lg font-medium text-gray-900">
                        {booking.name}
                      </h3>
                      <span class={`inline-flex px-2 py-1 text-xs font-semibold rounded-full ${
                        booking.status === 'pending'
                          ? 'bg-yellow-100 text-yellow-800'
                          : booking.status === 'confirmed'
                          ? 'bg-green-100 text-green-800'
                          : booking.status === 'cancelled'
                          ? 'bg-red-100 text-red-800'
                          : 'bg-gray-100 text-gray-800'
                      }`}>
                        {booking.status === 'pending' ? '‚è≥ Pendiente' :
                         booking.status === 'confirmed' ? '‚úÖ Confirmada' :
                         booking.status === 'cancelled' ? '‚ùå Cancelada' : booking.status}
                      </span>
                      {booking.total_price && (
                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                          üí∞ {Number(booking.total_price).toFixed(2)}‚Ç¨
                        </span>
                      )}
                    </div>

                    <!-- Detalles de contacto y sesi√≥n -->
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mb-4">
                      <div>
                        <p class="text-sm text-gray-600">üìß {booking.email}</p>
                        <p class="text-sm text-gray-600">üì± {booking.phone}</p>
                        {booking.company && (
                          <p class="text-sm text-gray-600">üè¢ {booking.company}</p>
                        )}
                      </div>

                      <div>
                        <p class="text-sm text-gray-600">
                          üìÖ {new Date(booking.preferred_date).toLocaleDateString('es-ES', {
                            weekday: 'short',
                            day: 'numeric',
                            month: 'short',
                            year: 'numeric'
                          })}
                        </p>
                        <p class="text-sm text-gray-600">‚è∞ {booking.preferred_time}</p>
                        <p class="text-sm text-gray-600">‚è≥ {booking.package_duration}</p>
                      </div>

                      <div>
                        <p class="text-sm text-gray-600">
                          üè¢ {booking.studio_space === 'all' ? 'Todos los espacios' : booking.studio_space}
                        </p>
                        <p class="text-sm text-gray-600">üé¨ {booking.session_type}</p>
                        <p class="text-sm text-gray-600">üë• {booking.participants} participantes</p>
                      </div>
                    </div>

                    <!-- C√≥digo de descuento si existe -->
                    {booking.discount_code && (
                      <div class="mb-4 p-3 bg-green-50 rounded-lg inline-block">
                        <p class="text-sm text-green-800">
                          üí∞ <strong>Descuento:</strong> {booking.discount_code} ({booking.discount_percentage}%)
                        </p>
                      </div>
                    )}

                    <!-- Notas si existen -->
                    {booking.notes && (
                      <div class="mb-4 p-3 bg-gray-50 rounded-lg">
                        <p class="text-sm text-gray-600">
                          <strong>üìù Notas:</strong> {booking.notes}
                        </p>
                      </div>
                    )}

                    <!-- Motivo de cancelaci√≥n si existe -->
                    {booking.cancellation_reason && (
                      <div class="mb-4 p-3 bg-red-50 rounded-lg">
                        <p class="text-sm text-red-700">
                          <strong>Motivo de cancelaci√≥n:</strong> {booking.cancellation_reason}
                        </p>
                      </div>
                    )}

                    <!-- Fechas de creaci√≥n y confirmaci√≥n -->
                    <div class="text-xs text-gray-500 flex flex-wrap gap-4">
                      <p>Creada: {new Date(booking.created_at).toLocaleString('es-ES')}</p>
                      {booking.confirmed_at && (
                        <p>Confirmada: {new Date(booking.confirmed_at).toLocaleString('es-ES')}</p>
                      )}
                      {booking.cancelled_at && (
                        <p>Cancelada: {new Date(booking.cancelled_at).toLocaleString('es-ES')}</p>
                      )}
                      <p class="font-mono">ID: {booking.id.slice(0, 8)}...</p>
                    </div>
                  </div>

                  <!-- Acciones -->
                  <div class="ml-6 flex flex-col gap-2">
                    {booking.status === 'pending' && (
                      <>
                        <form action={actions.confirmBooking} method="POST">
                          <input type="hidden" name="bookingId" value={booking.id} />
                          <input type="hidden" name="adminPassword" value="__SUPABASE_AUTH__" />
                          <button
                            type="submit"
                            class="w-full bg-green-600 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-green-700 transition-colors"
                          >
                            ‚úÖ Confirmar
                          </button>
                        </form>
                        <form action={actions.cancelBooking} method="POST" onsubmit="return confirm('¬øEst√°s seguro de cancelar esta reserva?')">
                          <input type="hidden" name="bookingId" value={booking.id} />
                          <input type="text" name="reason" placeholder="Motivo..." class="w-full px-2 py-1 text-xs border rounded mb-1" />
                          <button
                            type="submit"
                            class="w-full bg-red-600 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-red-700 transition-colors"
                          >
                            ‚ùå Cancelar
                          </button>
                        </form>
                      </>
                    )}

                    {booking.status === 'confirmed' && (
                      <div class="text-center">
                        <span class="inline-flex items-center px-4 py-2 bg-green-100 text-green-800 rounded-md text-sm font-medium">
                          ‚úÖ Confirmada
                        </span>
                      </div>
                    )}

                    {booking.status === 'cancelled' && (
                      <div class="text-center">
                        <span class="inline-flex items-center px-4 py-2 bg-red-100 text-red-800 rounded-md text-sm font-medium">
                          ‚ùå Cancelada
                        </span>
                      </div>
                    )}
                  </div>
                </div>
              </div>
            ))}
          </div>
        ) : (
          <div class="p-12 text-center text-gray-500">
            <p class="text-lg">No hay reservas disponibles</p>
            <p class="text-sm mt-2">Las nuevas reservas aparecer√°n aqu√≠</p>
          </div>
        )}
      </div>
    </div>
  </div>
</AdminLayout>

<script>
  // Filtros de reservas
  const filterButtons = document.querySelectorAll('[data-filter]');
  const bookingItems = document.querySelectorAll('.booking-item');

  filterButtons.forEach(button => {
    button.addEventListener('click', () => {
      const filter = button.getAttribute('data-filter');

      // Actualizar estilos de botones
      filterButtons.forEach(btn => {
        btn.classList.remove('bg-primary-black', 'text-white');
        btn.classList.add('bg-gray-200', 'text-gray-700');
      });
      button.classList.remove('bg-gray-200', 'text-gray-700');
      button.classList.add('bg-primary-black', 'text-white');

      // Filtrar reservas
      bookingItems.forEach(item => {
        if (filter === 'all' || item.getAttribute('data-status') === filter) {
          item.classList.remove('hidden');
        } else {
          item.classList.add('hidden');
        }
      });
    });
  });

  // Auto-refresh cada 60 segundos
  setTimeout(() => {
    window.location.reload();
  }, 60000);
</script>
