---
import Layout from '@/layouts/Layout.astro';
import HeroSection from '@/components/common/HeroSection.astro';
import PricingSection from '@/components/rates/PricingSection.astro';
import ContentPackagesSection from '@/components/rates/ContentPackagesSection.astro';
import AdditionalServicesSection from '@/components/rates/AdditionalServicesSection.astro';
import PaymentInfoSection from '@/components/rates/PaymentInfoSection.astro';
import CtaSection from '@/components/common/CtaSection.astro';
import { HERO_CONTENT, CTA_CONTENT } from '@/utils';
import { getActivePromotion } from '@/utils/promotions';

// Obtener promoción activa para el meta description
const promo = getActivePromotion();
const metaDescription = promo
  ? `¡${promo.discountPercentage}% DESCUENTO hasta fin de febrero 2026! Tarifas de alquiler de estudio en Sevilla. Código ${promo.code}. Desde 90€ por 2 horas.`
  : "Tarifas transparentes de alquiler de estudio en Sevilla. Desde alquiler por horas hasta paquetes mensuales de contenido.";
---

<Layout
  title="Precios Alquiler Estudio Fotográfico Sevilla - Tarifas por Horas"
  description={metaDescription}
>
  <HeroSection
    title={HERO_CONTENT.rates.title}
    description={HERO_CONTENT.rates.description}
    image=""
    overlayClass="bg-primary-beige"
    textClass="text-primary-black"
    buttonText=""
    heightClass="h-[40vh] md:h-[50vh]"  />
  
  <PricingSection />
  <ContentPackagesSection />
  <AdditionalServicesSection />
  <PaymentInfoSection />
  <CtaSection
    title={CTA_CONTENT.personalizedQuote.title}
    description={CTA_CONTENT.personalizedQuote.description}
    primaryText={CTA_CONTENT.personalizedQuote.primaryText}
    primaryHref={CTA_CONTENT.personalizedQuote.primaryHref}
    secondaryText={CTA_CONTENT.personalizedQuote.secondaryText}
    secondaryHref={CTA_CONTENT.personalizedQuote.secondaryHref}
    bgClass="bg-primary-black"
    textClass="text-primary-white"
    primaryBtnVariant="custom"
    primaryBtnClass="bg-primary-white text-primary-black hover:bg-primary-beige hover:text-primary-gray"
    secondaryBtnVariant="custom"
    secondaryBtnClass="border-2 border-white text-primary-white bg-transparent hover:bg-primary-beige hover:text-primary-gray font-medium"
  />
</Layout>
