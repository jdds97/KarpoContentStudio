---
import { ArrowRight } from '@/components/icons';
import { ADDITIONAL_SERVICES, SECTION_CONTENT, type AdditionalService } from '@/utils';
import Button from '@/components/common/Button.astro';
---
<section class="section-padding bg-primary-white">
  <div class="container mx-auto container-padding">
    <div class="max-w-2xl mx-auto text-center mb-12">
      <h2 class="section-title mb-2">{SECTION_CONTENT.additionalServices.title}</h2>
      <p class="text-lg text-primary-gray">{SECTION_CONTENT.additionalServices.description}</p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {ADDITIONAL_SERVICES.map((service: AdditionalService) => (
        <div class="group p-7 rounded-2xl shadow-lg border border-primary-black/10 bg-primary-white/70 backdrop-blur-md transition-all duration-200 hover:bg-primary-beige/90 hover:shadow-2xl relative flex flex-col h-full">
          <div class="flex items-center mb-4">
            <service.icon class="w-10 h-10 text-primary-black mr-3 group-hover:text-primary-white transition-colors" />
            <h3 class="text-lg font-instrument font-semibold text-primary-black group-hover:text-primary-black">{service.title}</h3>
          </div>
          <p class="text-primary-gray mb-4">{service.description}</p>
          <div class="flex justify-between items-center mt-auto">
            <span class="font-bold text-primary-black text-lg">{service.price}</span>
            {service.priceNote ? (
              <span class="text-xs text-neutral-700">{service.priceNote}</span>
            ) : service.actionText && service.actionHref ? (
              <Button 
                href={service.actionHref} 
                variant="custom"
                class="inline-flex items-center text-xs text-primary-black hover:text-primary-gray transition-colors font-medium"
              >
                {service.actionText}
                <ArrowRight class="w-3 h-3 ml-1" />
              </Button>
            ) : null}
          </div>
        </div>
      ))}
    </div>
    <div class="mt-10 text-center">
      <p class="text-primary-gray text-base mb-4">
        ¿Necesitas un servicio personalizado o tienes una producción especial?
      </p>
      <Button 
        href="/contact" 
        variant="custom"
        class="inline-flex items-center bg-primary-beige text-primary-black px-6 py-3 rounded-lg font-medium hover:bg-primary-black hover:text-primary-white transition-all duration-300 shadow-sm hover:shadow-md"
      >
        Contáctanos para presupuesto personalizado
        <ArrowRight class="w-4 h-4 ml-2" />
      </Button>
    </div>
  </div>
</section>
