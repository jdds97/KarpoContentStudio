---
import { Calendar, XCircle, ChevronRight, CreditCard, Clock } from '@/components/icons';
import { PAYMENT_INFO } from '@/utils';
import Button from '@/components/common/Button.astro';
---
<section class="section-padding bg-secondary-lightgray">
  <div class="container mx-auto container-padding">
    <div class="max-w-4xl mx-auto">
      <h2 class="section-title text-center mb-12 text-primary-black">Información de Pago y Reservas</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Política de Reserva -->
        <div class="bg-primary-beige p-8 rounded-lg shadow-sm border border-primary-black/10 flex flex-col h-full">
          <div class="flex items-center mb-6">
            <Calendar class="w-8 h-8 text-primary-black mr-3" />
            <h3 class="text-xl font-instrument text-primary-black">{PAYMENT_INFO.reservation.title}</h3>
          </div>
          <ul class="space-y-4 text-primary-black">
            {PAYMENT_INFO.reservation.items.map((item) => (
              <li class="flex items-start">
                <ChevronRight class="w-5 h-5 text-primary-black mr-2 mt-0.5" />
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
        <!-- Política de Cancelación -->
        <div class="bg-primary-beige p-8 rounded-lg shadow-sm border border-primary-black/10 flex flex-col h-full">
          <div class="flex items-center mb-6">
            <XCircle class="w-8 h-8 text-primary-black mr-3" />
            <h3 class="text-xl font-instrument text-primary-black">{PAYMENT_INFO.cancellation.title}</h3>
          </div>
          <ul class="space-y-4 text-primary-black">
            {PAYMENT_INFO.cancellation.items.map((item) => (
              <li class="flex items-start">
                <ChevronRight class="w-5 h-5 text-primary-black mr-2 mt-0.5" />
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
      
      <!-- Métodos de Pago y Notas -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-12">
        <div class="bg-primary-white/60 backdrop-blur-md p-8 rounded-2xl shadow-lg border border-primary-black/10 flex flex-col h-full">
          <div class="flex items-center mb-6">
            <CreditCard class="w-8 h-8 text-neutral-700 mr-3" />
            <h3 class="text-xl font-instrument text-neutral-800">{PAYMENT_INFO.methods.title}</h3>
          </div>
          <ul class="space-y-3 text-neutral-800">
            {PAYMENT_INFO.methods.items.map((item) => (
              <li>{item}</li>
            ))}
          </ul>
        </div>
        <div class="bg-primary-white/60 backdrop-blur-md p-8 rounded-2xl shadow-lg border border-primary-black/10 flex flex-col h-full">
          <div class="flex items-center mb-6">
            <Clock class="w-8 h-8 text-primary-black mr-3" />
            <h3 class="text-xl font-instrument text-primary-black">{PAYMENT_INFO.notes.title}</h3>
          </div>
          <ul class="space-y-3 text-primary-black">
            {PAYMENT_INFO.notes.items.map((item) => (
              <li>{item}</li>
            ))}
          </ul>
        </div>
      </div>
      <p class="mt-10 text-primary-gray text-center text-base">{PAYMENT_INFO.footer.text} 
        <Button 
          href={PAYMENT_INFO.footer.linkHref} 
          variant="custom"
          class="underline font-medium hover:text-primary-black"
        >
          {PAYMENT_INFO.footer.linkText}
        </Button> 
        {PAYMENT_INFO.footer.restText}
      </p>
    </div>
  </div>
</section>
