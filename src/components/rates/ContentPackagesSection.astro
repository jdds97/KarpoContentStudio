---
import Button from '@/components/common/Button.astro';
import { CONTENT_PACKAGES } from '@/utils';
---

<section class="py-16 bg-primary-white">
    <div class="container mx-auto px-4 lg:px-8">
        <!-- Header -->
        <div class="text-center mb-12">
            <h2 class="text-3xl lg:text-4xl font-serif text-primary-black mb-6">
                {CONTENT_PACKAGES.header.title}
            </h2>
            <p class="text-lg text-primary-gray max-w-3xl mx-auto mb-4">
                {CONTENT_PACKAGES.header.subtitle}
            </p>
            <p class="text-base text-primary-gray max-w-4xl mx-auto">
                {CONTENT_PACKAGES.header.description}
            </p>
        </div>

        <!-- Paquetes -->
        <div class="grid md:grid-cols-3 gap-8 mb-16">
            {CONTENT_PACKAGES.packages.map((pkg) => (
            <div class={`bg-white rounded-lg shadow-lg overflow-hidden border-2 ${pkg.borderColor} ${pkg.isPopular ? 'transform scale-105 relative' : ''}`}>
                {pkg.badge && (
                    <div class="absolute -top-6 left-1/2 transform -translate-x-1/2 z-10 mt-7 mb-12">
                        <div class="bg-primary-beige text-primary-black px-6 py-2 rounded-full text-sm font-bold shadow-lg">
                            {pkg.badge}
                        </div>
                    </div>
                )}
                
                <div class={`${pkg.headerBg} p-6 text-center ${pkg.isPopular ? 'pt-10' : ''}`}>
                    <h3 class={`text-2xl font-bold ${pkg.headerTextColor} mb-2`}>{pkg.name}</h3>
                    <div class={`text-3xl font-bold ${pkg.headerTextColor}`}>{pkg.price}</div>
                    <div class="text-sm text-gray-300">+ IVA</div>
                    <p class={`text-sm ${pkg.headerTextColor} mt-2`}>
                        {pkg.description}
                    </p>
                </div>
                <div class="p-6">
                    <ul class="space-y-3 mb-6">
                        {pkg.features.map((feature) => (
                        <li class="flex items-start">
                            <span class="text-primary-black mr-3"><feature.icon class="w-5 h-5" /></span>
                            <span class={`text-sm ${feature.isBold ? 'font-medium text-primary-black' : 'text-primary-gray'}`}>
                                {feature.text}
                            </span>
                        </li>
                        ))}
                    </ul>
                    <Button 
                        href={pkg.buttonLink}
                        variant={pkg.buttonVariant}
                        fullWidth={true}
                        class={pkg.buttonClass || 'h-14 text-base'}
                    >
                        {pkg.buttonText}
                    </Button>
                </div>
            </div>
            ))}
        </div>

        <!-- Servicios Adicionales y Por qué elegirnos -->
        <div class="grid md:grid-cols-2 gap-8 mb-8">
            <!-- Servicios Adicionales -->
            <div class="bg-primary-beige rounded-lg p-8">
                <h3 class="text-2xl font-bold text-primary-black mb-10 text-center">
                    {CONTENT_PACKAGES.additionalServices.title}
                </h3>
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 mt-8">
                    {CONTENT_PACKAGES.additionalServices.services.map((service) => (
                    <div class="text-center">
                        <span class="text-2xl mb-2 block"><service.icon class="w-6 h-6 mx-auto" /></span>
                        <h4 class="font-medium text-primary-black mb-1">{service.title}</h4>
                        <p class="text-sm text-primary-gray">{service.subtitle}</p>
                    </div>
                    ))}
                </div>
            </div>

            <!-- Por qué elegirnos -->
            <div class="bg-primary-white rounded-lg p-8 border border-primary-beige">
                <h3 class="text-2xl font-bold text-primary-black mb-6 text-center">
                    {CONTENT_PACKAGES.whyChooseUs.title}
                </h3>
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 mt-4">
                    {CONTENT_PACKAGES.whyChooseUs.reasons.map((reason) => (
                    <div class={`text-center ${reason.isFullWidth ? 'col-span-full' : ''}`}>
                        <span class="text-2xl mb-2 block"><reason.icon class="w-6 h-6 mx-auto" /></span>
                        <h4 class="font-medium text-primary-black mb-1">{reason.title}</h4>
                        <p class="text-sm text-primary-gray">{reason.subtitle}</p>
                    </div>
                    ))}
                </div>
            </div>
        </div>
    </div>
</section>
