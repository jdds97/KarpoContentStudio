---
import { Quote } from '@lucide/astro';
import { TESTIMONIALS, SECTION_CONTENT } from '@/utils';
---
<section class="section-padding bg-primary-black text-primary-white">
  <div class="container mx-auto container-padding text-center prose prose-neutral dark:prose-invert">
    <h2 class="section-title">{SECTION_CONTENT.testimonials.title}</h2>
    <p class="text-lg md:text-xl text-secondary-lightgray max-w-3xl mx-auto">
      {SECTION_CONTENT.testimonials.description}
    </p>
  </div>
  <div class="container mx-auto container-padding mt-5">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {TESTIMONIALS.map(testimonial => (
        <div class="bg-primary-black border border-secondary-darkgray p-8 rounded-lg relative">
          <Quote class="absolute top-6 left-6 text-primary-beige/30 w-9 h-9" />
          <div class="pl-8 pt-8">
            <p class="mb-6 text-secondary-lightgray">
              "{testimonial.quote}"
            </p>
            <div class="flex items-center">
              <div class="mr-4 w-12 h-12 rounded-full bg-primary-beige/20 flex items-center justify-center">
                <span class="font-instrument text-lg">{testimonial.author.initials}</span>
              </div>
              <div>
                <p class="font-medium">{testimonial.author.name}</p>
                <p class="text-sm text-secondary-lightgray">{testimonial.author.role}</p>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
