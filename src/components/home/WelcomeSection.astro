---
import { WELCOME_SERVICES, SECTION_CONTENT } from '@/utils';
---

<section class="section-padding bg-primary-white">
  <div class="container mx-auto container-padding max-w-7xl ">
    <div class="max-w-4xl mx-auto text-center prose prose-lg prose-neutral dark:prose-invert max-w-none">
      <h2 class="section-title text-primary-black mb-6">{SECTION_CONTENT.welcome.title}</h2>
      <p class="text-lg leading-relaxed text-gray-600">
        {SECTION_CONTENT.welcome.description}
      </p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mt-16">
        {WELCOME_SERVICES.map((service) => (
        <div class="text-center p-6 hover:bg-primary-beige/20 transition-colors rounded-lg prose prose-sm prose-neutral dark:prose-invert max-w-none">
          <div class="w-20 h-20 mx-auto mb-4 bg-primary-beige rounded-full flex items-center justify-center">
            <service.icon class="w-10 h-10 text-primary-black" />
          </div>
          <h3 class="font-instrument text-xl mb-3 text-primary-black">{service.title}</h3>
          <p class="text-sm leading-relaxed text-gray-600 tracking-wide">{service.description}</p>
        </div>
        ))}
      </div>
  </div>
</section>