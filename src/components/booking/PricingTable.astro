---
import Button from '@/components/common/Button.astro';
import { pricingSections, pricingNotes, PRICING_TABLE } from '@/utils';
import Info from '@/components/icons/Info.astro';
---

<!-- Desktop Table View (hidden on mobile) -->
<div class="hidden lg:block overflow-x-auto">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    {/* Sección de Alquiler por Horas */}
    <div class="bg-white rounded-2xl shadow-lg overflow-hidden border border-primary-beige/30">
      <div class="bg-primary-black text-primary-white px-6 py-4">
        <h3 class="font-instrument text-xl font-bold">{pricingSections[0].title}</h3>
      </div>
      <div class="divide-y divide-primary-beige/30">
        {pricingSections[0].items.map((item: any) => (
          <div class="flex items-center justify-between px-6 py-4 hover:bg-primary-beige/10 transition-colors">
            <div class="flex-1">
              <p class="font-medium text-primary-black">{item.service}</p>
              <p class="text-sm text-primary-gray">{item.duration}</p>
            </div>
            <div class="flex items-center gap-4">
              <span class="font-bold text-lg text-primary-black">{item.price}</span>
              <Button
                href={item.actionHref}
                variant="table"
              >
                {PRICING_TABLE.actions.book}
              </Button>
            </div>
          </div>
        ))}
      </div>
    </div>

    {/* Sección de Membresía */}
    <div class="bg-white rounded-2xl shadow-lg overflow-hidden border border-primary-beige/30">
      <div class="bg-primary-black text-primary-white px-6 py-4">
        <h3 class="font-instrument text-xl font-bold">{pricingSections[1].title}</h3>
      </div>
      <div class="p-6">
        {pricingSections[1].items.map((item: any) => (
          <div class="text-center">
            <div class="mb-4">
              <span class="text-4xl font-bold text-primary-black">{item.price.split('/')[0]}</span>
              <span class="text-lg text-primary-gray">/mes +IVA</span>
            </div>
            <p class="text-primary-gray mb-6">{item.duration}</p>
            <ul class="text-left space-y-3 mb-6">
              <li class="flex items-center gap-2">
                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>10 horas mensuales incluidas</span>
              </li>
              <li class="flex items-center gap-2">
                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Hora a 25€ (ahorro del 58%)</span>
              </li>
              <li class="flex items-center gap-2">
                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>20% descuento en horas extra</span>
              </li>
              <li class="flex items-center gap-2">
                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Prioridad en reservas</span>
              </li>
            </ul>
            <Button
              href={item.actionHref}
              variant="primary"
              fullWidth
            >
              {PRICING_TABLE.actions.contact}
            </Button>
          </div>
        ))}
      </div>
    </div>
  </div>
</div>

<!-- Mobile Card View (visible on mobile and tablet) -->
<div class="lg:hidden space-y-6">
  {/* Sección de Alquiler por Horas - Mobile */}
  <div class="bg-white rounded-2xl shadow-lg overflow-hidden border border-primary-beige/30">
    <div class="bg-primary-black text-primary-white px-4 py-3">
      <h3 class="font-instrument text-lg font-bold">{pricingSections[0].title}</h3>
    </div>
    <div class="divide-y divide-primary-beige/30">
      {pricingSections[0].items.map((item: any) => (
        <div class="p-4">
          <div class="flex justify-between items-start mb-3">
            <div>
              <h4 class="font-medium text-primary-black">{item.service}</h4>
              <p class="text-sm text-primary-gray">{item.duration}</p>
            </div>
            <span class="font-bold text-lg text-primary-black">{item.price}</span>
          </div>
          <Button
            href={item.actionHref}
            variant="custom"
            fullWidth
            class="bg-primary-black hover:bg-primary-beige hover:text-primary-black text-primary-white transition-all duration-300 py-2 text-center text-sm font-semibold"
          >
            {PRICING_TABLE.actions.book}
          </Button>
        </div>
      ))}
    </div>
  </div>

  {/* Sección de Membresía - Mobile */}
  <div class="bg-white rounded-2xl shadow-lg overflow-hidden border border-primary-beige/30">
    <div class="bg-primary-black text-primary-white px-4 py-3">
      <h3 class="font-instrument text-lg font-bold">{pricingSections[1].title}</h3>
    </div>
    <div class="p-4">
      {pricingSections[1].items.map((item: any) => (
        <div class="text-center">
          <div class="mb-3">
            <span class="text-3xl font-bold text-primary-black">{item.price.split('/')[0]}</span>
            <span class="text-base text-primary-gray">/mes +IVA</span>
          </div>
          <p class="text-sm text-primary-gray mb-4">{item.duration}</p>
          <ul class="text-left space-y-2 mb-4 text-sm">
            <li class="flex items-center gap-2">
              <svg class="w-4 h-4 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>10 horas mensuales incluidas</span>
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-4 h-4 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Hora a 25€ (ahorro del 58%)</span>
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-4 h-4 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>20% descuento en horas extra</span>
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-4 h-4 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Prioridad en reservas</span>
            </li>
          </ul>
          <Button
            href={item.actionHref}
            variant="primary"
            fullWidth
          >
            {PRICING_TABLE.actions.contact}
          </Button>
        </div>
      ))}
    </div>
  </div>
</div>

<div class="mt-8 bg-primary-beige/80 p-4 md:p-6 rounded-xl border border-primary-beige-dark shadow-sm">
  <h3 class="font-instrument text-lg md:text-xl mb-4 flex items-center gap-2 text-primary-black">
    <Info class="w-6 h-6 md:w-7 md:h-7 text-primary-black drop-shadow-md flex-shrink-0" />
    {PRICING_TABLE.notes.title}
  </h3>
  <ul class="space-y-3 mt-4 text-primary-black">
    {pricingNotes.map((note: any) => (
      <li class="flex items-start gap-3">
        <Info class="w-5 h-5 md:w-6 md:h-6 text-primary-black mt-0.5 flex-shrink-0" />
        <span class="text-sm md:text-base leading-relaxed">{note}</span>
      </li>
    ))}
  </ul>
</div>
