    <h3 class="text-2xl font-instrument font-bold mb-4 text-primary-white">{BOOKING_SIDEBAR.help.title}</h3>
    <p class="mb-4 text-gray-100">
      {BOOKING_SIDEBAR.help.description}
    </p>
    <div class="space-y-3 mb-6">
      <div class="flex items-center">
        <Phone class="w-5 h-5 text-primary-beige mr-2" />
        <a href={`tel:${CONTACT_INFO.phone}`} class="text-primary-white hover:text-primary-beige transition-colors font-medium">{CONTACT_INFO.phone}</a>
      </div>
      <div class="flex items-center">
        <Mail class="w-5 h-5 text-primary-beige mr-2" />
        <a href={`mailto:${CONTACT_INFO.email}`} class="text-primary-white hover:text-primary-beige transition-colors font-medium">{CONTACT_INFO.email}</a>
