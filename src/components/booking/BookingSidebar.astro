    <ul class="space-y-4 mt-4">
      <li class="flex items-start">
        <Clock class="w-6 h-6 text-primary-black mr-2 mt-0.5" />
        <div>
          <p class="font-medium">{BOOKING_SIDEBAR.info.schedule.title}</p>
          <p class="text-primary-gray text-sm">{BOOKING_SIDEBAR.info.schedule.time}</p>
        </div>
      </li>
      <li class="flex items-start">
        <CreditCard class="w-6 h-6 text-primary-black mr-2 mt-0.5" />
        <div>
          <p class="font-medium">{BOOKING_SIDEBAR.info.payment.title}</p>
          <p class="text-primary-gray text-sm">{BOOKING_SIDEBAR.info.payment.description}</p>
        </div>
      </li>
      <li class="flex items-start">
        <XCircle class="w-6 h-6 text-primary-black mr-2 mt-0.5" />
        <div>
          <p class="font-medium">{BOOKING_SIDEBAR.info.cancellation.title}</p>
          <p class="text-primary-gray text-sm">{BOOKING_SIDEBAR.info.cancellation.description}</p>
        </div>
      </li>
      <li class="flex items-start">
        <Info class="w-6 h-6 text-primary-black mr-2 mt-0.5" />
        <div>
          <p class="font-medium">{BOOKING_SIDEBAR.info.minTime.title}</p>
          <p class="text-primary-gray text-sm">{BOOKING_SIDEBAR.info.minTime.description}</p>
