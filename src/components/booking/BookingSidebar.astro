---
import Button from '@/components/common/Button.astro';
import Clock from '@/components/icons/Clock.astro';
import CreditCard from '@/components/icons/CreditCard.astro';
import XCircle from '@/components/icons/XCircle.astro';
import Info from '@/components/icons/Info.astro';
import Phone from '@/components/icons/Phone.astro';
import Mail from '@/components/icons/Mail.astro';
import ArrowRight from '@/components/icons/ArrowRight.astro';
import { BOOKING_SIDEBAR, CONTACT_INFO } from '@/utils';
---
<div>
  <!-- Informaci√≥n r√°pida -->
