---
import Building2 from '@/components/icons/Building2.astro';
import Mic from '@/components/icons/Mic.astro';
import Sparkles from '@/components/icons/Sparkles.astro';
import XCircle from '@/components/icons/XCircle.astro';
import ChevronRight from '@/components/icons/ChevronRight.astro';
import Button from '@/components/common/Button.astro';
import { BOOKING_TERMS } from '@/utils';
---
<section class="section-padding bg-primary-beige">
  <div class="container mx-auto container-padding">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="section-subtitle text-center mb-12 text-primary-black">{BOOKING_TERMS.title}</h2>
      <div class="bg-primary-white p-8 rounded-lg shadow-sm text-left">
        <h3 class="text-xl font-instrument mb-6 text-primary-black">{BOOKING_TERMS.subtitle}</h3>
        <p class="mb-6 text-primary-black">
          {BOOKING_TERMS.description}
        </p>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {BOOKING_TERMS.sections.map((section) => {
            const IconComponent = section.icon === 'Building2' ? Building2 :
                                section.icon === 'Mic' ? Mic :
                                section.icon === 'Sparkles' ? Sparkles :
                                XCircle;
            
            return (
              <div>
                <h4 class="text-lg font-medium mb-4 flex items-center text-primary-black">
                  <IconComponent class="w-5 h-5 text-primary-black mr-2 flex-shrink-0" />
                  {section.title}
                </h4>
                <ul class="space-y-2 mt-4 text-primary-gray text-sm list-none">
                  {section.rules.map((rule) => (
                    <li class="flex items-start">
                      <XCircle class="w-4 h-4 text-primary-black mr-2 mt-0.5 flex-shrink-0" />
                      <span>{rule}</span>
                    </li>
                  ))}
                </ul>
              </div>
            );
          })}
        </div>
        <div class="mt-6 text-center">
          <Button 
            href="/faq" 
            variant="custom"
            class="text-primary-black font-medium inline-flex items-center hover:text-primary-gray transition-colors"
          >
            {BOOKING_TERMS.linkText}
            <ChevronRight class="w-4 h-4 ml-1 flex-shrink-0" />
          </Button>
        </div>
      </div>
    </div>
  </div>
</section>
