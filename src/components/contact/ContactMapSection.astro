---
import { MapPin, Phone, Mail, Clock } from '@lucide/astro';
import { CONTACT_MAP_CONTENT } from '@/utils';
---

<section class="section-padding bg-primary-beige/30">
  <div class="container mx-auto container-padding">
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-instrument font-bold mb-6 text-primary-black">{CONTACT_MAP_CONTENT.title}</h2>
      <p class="text-lg md:text-xl mb-10 max-w-3xl mx-auto text-primary-gray">
        {CONTACT_MAP_CONTENT.description}
      </p>
    </div>
    
    <!-- Información de contacto mejorada -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
      <!-- Dirección -->
      <div class="bg-primary-white p-6 rounded-xl shadow-md hover:shadow-lg transition-shadow">
        <div class="flex items-center mb-4">
          <div class="w-12 h-12 bg-primary-beige rounded-full flex items-center justify-center mr-4">
            <MapPin class="w-6 h-6 text-primary-black" />
          </div>
          <h3 class="font-instrument text-lg font-semibold">{CONTACT_MAP_CONTENT.sections.address.title}</h3>
        </div>
        {CONTACT_MAP_CONTENT.sections.address.lines.map((line) => (
          <p class="text-primary-gray">{line}</p>
        ))}
      </div>
      
      <!-- Teléfono -->
      <div class="bg-primary-white p-6 rounded-xl shadow-md hover:shadow-lg transition-shadow">
        <div class="flex items-center mb-4">
          <div class="w-12 h-12 bg-primary-beige rounded-full flex items-center justify-center mr-4">
            <Phone class="w-6 h-6 text-primary-black" />
          </div>
          <h3 class="font-instrument text-lg font-semibold">{CONTACT_MAP_CONTENT.sections.phone.title}</h3>
        </div>
        <a href={CONTACT_MAP_CONTENT.sections.phone.href} class="text-primary-gray hover:text-primary-black transition-colors font-medium">{CONTACT_MAP_CONTENT.sections.phone.value}</a>
      </div>
      
      <!-- Email -->
      <div class="bg-primary-white p-6 rounded-xl shadow-md hover:shadow-lg transition-shadow">
        <div class="flex items-center mb-4">
          <div class="w-12 h-12 bg-primary-beige rounded-full flex items-center justify-center mr-4">
            <Mail class="w-6 h-6 text-primary-black" />
          </div>
          <h3 class="font-instrument text-lg font-semibold">{CONTACT_MAP_CONTENT.sections.email.title}</h3>
        </div>
        <a href={CONTACT_MAP_CONTENT.sections.email.href} class="text-primary-gray hover:text-primary-black transition-colors font-medium">{CONTACT_MAP_CONTENT.sections.email.value}</a>
      </div>
    </div>
  </div>
</section>
<div class="w-full h-[400px] rounded-none overflow-hidden shadow-lg" style="margin-left:0;margin-right:0;padding-left:0;padding-right:0;">
  <iframe src="https://www.google.com/maps?q=Calle+La+Red+Veintisiete,+6,+Sevilla&output=embed" width="100%" height="100%" style="border:0;min-height:320px;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade" title="Ubicación The Content Studio Sevilla"></iframe>
</div>
