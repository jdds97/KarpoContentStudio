---
import { Image } from 'astro:assets';
import { NAVIGATION_LINKS, COMPANY_INFO, CONTACT_INFO } from '@/utils';
import MapPin from '@/components/icons/MapPin.astro';
import Phone from '@/components/icons/Phone.astro';
import Mail from '@/components/icons/Mail.astro';
---

<footer class="bg-primary-black text-primary-white py-16">
  <div class="container mx-auto container-padding">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      <!-- Logo y descripción -->
      <div class="lg:col-span-2">
        <Image 
          src="/images/logos/logo-white-optimized.webp"
          alt={COMPANY_INFO.logo.alt}
          class="h-12 w-auto mb-6"
          width={204} 
          height={72}
          loading="lazy"
          decoding="async"
        />
        <p class="text-gray-300 mb-6 max-w-md">
          Tu espacio creativo para sesiones de fotos, rodajes, podcast y eventos especiales en el corazón de Sevilla.
        </p>
        <div class="space-y-3">
          <div class="flex items-center">
            <MapPin class="w-5 h-5 text-primary-beige mr-3" />
            <span class="text-gray-300">Calle La Red Veintisiete, 6, Sevilla</span>
          </div>
          <div class="flex items-center">
            <Phone class="w-5 h-5 text-primary-beige mr-3" />
            <a href={`tel:${CONTACT_INFO.phone}`} class="text-gray-300 hover:text-primary-beige transition-colors">
              {CONTACT_INFO.phone}
            </a>
          </div>
          <div class="flex items-center">
            <Mail class="w-5 h-5 text-primary-beige mr-3" />
            <a href={`mailto:${CONTACT_INFO.email}`} class="text-gray-300 hover:text-primary-beige transition-colors">
              {CONTACT_INFO.email}
            </a>
          </div>
        </div>
      </div>

      <!-- Enlaces de navegación -->
      <div>
        <h3 class="font-instrument text-lg font-semibold mb-4 text-primary-white">Navegación</h3>
        <ul class="space-y-2">
          {NAVIGATION_LINKS.map((link) => (
            <li>
              <a href={link.href} class="text-gray-300 hover:text-primary-beige transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Información adicional -->
      <div>
        <h3 class="font-instrument text-lg font-semibold mb-4 text-primary-white">Información</h3>
        <ul class="space-y-2">
          <li>
            <a href="/terms" class="text-gray-300 hover:text-primary-beige transition-colors">
              Términos y Condiciones
            </a>
          </li>
          <li>
            <a href="/privacy-policy" class="text-gray-300 hover:text-primary-beige transition-colors">
              Política de Privacidad
            </a>
          </li>
          <li>
            <a href="/faq" class="text-gray-300 hover:text-primary-beige transition-colors">
              Preguntas Frecuentes
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Copyright y redes sociales -->
    <div class="border-t border-gray-700 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-400 text-sm mb-4 md:mb-0">
          © {new Date().getFullYear()} {COMPANY_INFO.name}. Todos los derechos reservados.
        </p>
        <div class="flex space-x-4">
          <!-- Aquí podrías agregar enlaces a redes sociales si los tienes -->
          <span class="text-gray-400 text-sm">Síguenos en redes sociales</span>
        </div>
      </div>
    </div>
  </div>
</footer>
