---
import Button from './Button.astro';
import { CTA_CONTENT } from '@/utils';

export interface Props {
  title?: string;
  description?: string;
  primaryText?: string;
  primaryHref?: string;
  secondaryText?: string;
  secondaryHref?: string;
  bgClass?: string;
  titleClass?: string;
  descriptionClass?: string;
  textClass?: string;
  primaryBtnVariant?: 'primary' | 'outline' | 'table' | 'custom';
  primaryBtnClass?: string;
  secondaryBtnVariant?: 'primary' | 'outline' | 'table' | 'custom';
  secondaryBtnClass?: string;
}
const {
  title = CTA_CONTENT.default.title,
  description = CTA_CONTENT.default.description,
  primaryText = CTA_CONTENT.default.primaryText,
  primaryHref = CTA_CONTENT.default.primaryHref,
  secondaryText = '',
  secondaryHref = '',
  bgClass = 'bg-primary-black',
  titleClass = 'text-primary-white',
  descriptionClass = 'text-primary-white',
  primaryBtnVariant = 'primary',
  primaryBtnClass = '',
  secondaryBtnVariant = 'outline',
  secondaryBtnClass = 'border-primary-white text-primary-white hover:bg-primary-black hover:text-primary-black',
} = Astro.props;
---
<section class={`py-16 ${bgClass}`}>
  <div class="container mx-auto container-padding text-center prose prose-neutral dark:prose-invert">
    <h2 class={`text-3xl md:text-4xl lg:text-5xl font-instrument mb-6 ${titleClass}`}>{title}</h2>
    <p class={`text-lg md:text-xl mb-10 max-w-3xl mx-auto ${descriptionClass}`}>
      {description}
    </p>
    <div class="flex flex-col md:flex-row justify-center gap-4">
      <Button href={primaryHref} variant={primaryBtnVariant} class={primaryBtnClass}>{primaryText}</Button>
      {secondaryText && secondaryHref && (
        <Button href={secondaryHref} variant={secondaryBtnVariant} class={secondaryBtnClass}>{secondaryText}</Button>
      )}
    </div>
  </div>
</section>
