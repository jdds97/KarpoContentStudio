---
import { SEO_METADATA } from '@/utils';

interface Props {
  title: string;
  description?: string;
  canonical?: string;
  image?: string;
  type?: "website" | "article";
  preloadHero?: boolean;
}

const {
  title,
  description = "The Content Studio - Tu espacio creativo para sesiones de fotos, rodajes, podcast y eventos especiales en Sevilla.",
  canonical = Astro.url.href,
  image = "/images/spaces/principal/webp/principal-medium.webp",
  type = "website",
  preloadHero = false,
} = Astro.props;

const siteUrl = "https://contentstudiokrp.es";
const fullImageUrl = image.startsWith("http") ? image : `${siteUrl}${image}`;
const fullTitle = `${title} | The Content Studio`;
---

<!-- Primary Meta Tags -->
<title>{fullTitle}</title>
<meta name="title" content={fullTitle} />
<meta name="description" content={description} />
<link rel="canonical" href={canonical} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonical} />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={fullImageUrl} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:image:alt" content={title} />
<meta property="og:site_name" content="The Content Studio" />
<meta property="og:locale" content="es_ES" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonical} />
<meta property="twitter:title" content={fullTitle} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={fullImageUrl} />

<!-- Favicon -->
<link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
<link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
<link rel="manifest" href="/favicon/site.webmanifest">
<meta name="theme-color" content={SEO_METADATA.themeColor}>

<!-- Meta tags adicionales para SEO -->
<meta name="keywords" content={SEO_METADATA.keywords} />
<meta name="author" content={SEO_METADATA.author} />
<meta name="robots" content={SEO_METADATA.robots} />

<!-- Preload hero image for better LCP -->
{preloadHero && (
  <link
    rel="preload"
    as="image"
    href="/images/spaces/webp/principal-hero-ultra.webp"
    type="image/webp"
    fetchpriority="high"
  />
)}