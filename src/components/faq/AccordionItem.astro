---
import ChevronDown from '@/components/icons/ChevronDown.astro';

interface Props {
  question: string;
  answer: string;
  index: number;
  categoryIndex?: number;
}

const { question, answer, index, categoryIndex = 0 } = Astro.props as Props;
const accordionId = `accordion-${categoryIndex}-${index}`;
---

<div class="accordion-item">
  <!-- Checkbox oculto que controla el estado del acordeón -->
  <input 
    type="checkbox" 
    id={accordionId} 
    class="accordion-checkbox"
  />
  
  <!-- Label que actúa como botón del acordeón -->
  <label for={accordionId} class="accordion-header">
    <span class="font-instrument text-lg leading-relaxed">{question}</span>
    <ChevronDown class="accordion-icon" />
  </label>
  
  <!-- Contenido del acordeón -->
  <div class="accordion-content">
    <div class="accordion-content-inner">
      <div set:html={answer}></div>
    </div>
  </div>
</div>