---
interface Props {
  id: string;
  title: string;
  description: string;
  image: string;
  reverse?: boolean;
  features: string[];
  idealFor: string[];
}

const { id, title, description, image, reverse = false, features, idealFor } = Astro.props;
---

<div id={id} class={`flex flex-col ${reverse ? 'lg:flex-row-reverse' : 'lg:flex-row'} gap-10 mb-24`}>
  <!-- Image -->
  <div class="w-full lg:w-1/2">
    <img 
      src={image} 
      alt={title} 
      class="w-full h-full object-cover rounded-lg shadow-md" 
    />
  </div>
  
  <!-- Content -->
  <div class="w-full lg:w-1/2 flex flex-col justify-center">
    <h3 class="text-3xl font-instrument mb-4">{title}</h3>
    <p class="text-primary-gray mb-6">{description}</p>
    
    <!-- Features -->
    <div class="mb-6">
      <h4 class="text-xl font-instrument mb-3">Caracter√≠sticas Principales</h4>
      <ul class="space-y-2">
        {features.map(feature => (
          <li class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-primary-black mr-2 flex-shrink-0">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>{feature}</span>
          </li>
        ))}
      </ul>
    </div>
    
    <!-- Ideal For -->
    <div class="mb-8">
      <h4 class="text-xl font-instrument mb-3">Ideal para</h4>
      <ul class="space-y-2">
        {idealFor.map(item => (
          <li class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-primary-black mr-2 flex-shrink-0">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456zM16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z" />
            </svg>
            <span>{item}</span>
          </li>
        ))}
      </ul>
    </div>
    
    <a href="/booking" class="btn btn-primary self-start">Reservar Ahora</a>
  </div>
</div>