---
import { Lightbulb, Image, Mic, Package, ChevronRight } from '@/components/icons';
import { STUDIO_EQUIPMENT } from '@/utils';
---
<section class="section-padding bg-primary-beige">
  <div class="container mx-auto container-padding">
    <div class="max-w-4xl mx-auto prose prose-neutral dark:prose-invert mb-12">
      <h2 class="section-title text-center mb-12 text-primary-black">Equipamiento Incluido</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- IluminaciÃ³n -->
        <div class="bg-primary-white p-8 rounded-lg shadow-sm">
          <div class="flex items-center mb-4">
            <Lightbulb class="w-8 h-8 text-primary-black mr-3" />
            <h3 class="text-xl font-instrument text-primary-black">{STUDIO_EQUIPMENT.lighting.title}</h3>
          </div>
          <ul class="space-y-2 text-primary-gray">
            {STUDIO_EQUIPMENT.lighting.items.map((item) => (
              <li class="flex items-start">
                <ChevronRight class="w-5 h-5 text-primary-black mr-2 mt-0.5" />
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
        <!-- Fondos -->
        <div class="bg-primary-white p-8 rounded-lg shadow-sm">
          <div class="flex items-center mb-4">
            <Image class="w-8 h-8 text-primary-black mr-3" />
            <h3 class="text-xl font-instrument text-primary-black">{STUDIO_EQUIPMENT.backgrounds.title}</h3>
          </div>
          <ul class="space-y-2 text-primary-gray">
            {STUDIO_EQUIPMENT.backgrounds.items.map((item) => (
              <li class="flex items-start">
                <ChevronRight class="w-5 h-5 text-primary-black mr-2 mt-0.5" />
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
          <!-- Audio -->
        <div class="bg-primary-white p-8 rounded-lg shadow-sm">
          <div class="flex items-center mb-4">
            <Mic class="w-8 h-8 text-primary-black mr-3" />
            <h3 class="text-xl font-instrument text-primary-black">{STUDIO_EQUIPMENT.audio.title}</h3>
          </div>
          <ul class="space-y-2 text-primary-gray">
            {STUDIO_EQUIPMENT.audio.items.map((item) => (
              <li class="flex items-start">
                <ChevronRight class="w-5 h-5 text-primary-black mr-2 mt-0.5" />
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
        <!-- Comodidades -->
        <div class="bg-primary-white p-8 rounded-lg shadow-sm">
          <div class="flex items-center mb-4 text-primary-black">
            <Package class="w-8 h-8 text-primary-black mr-3" />
            <h3 class="text-xl font-instrument text-primary-black">{STUDIO_EQUIPMENT.amenities.title}</h3>
          </div>
          <ul class="space-y-2 text-primary-gray">
            {STUDIO_EQUIPMENT.amenities.items.map((item) => (
              <li class="flex items-start">
                <ChevronRight class="w-5 h-5 text-primary-black mr-2 mt-0.5" />
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
