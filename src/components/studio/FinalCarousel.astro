---
export interface Props {
  images: string[] | Array<{
    src: string;
    alt: string;
    title?: string;
    description?: string;
  }>;
  layout?: {
    columns: {
      mobile: number;
      tablet: number;
      desktop: number;
    };
    maxImages?: number;
    aspectRatio?: 'square' | 'portrait' | 'landscape' | 'auto';
    gap?: 'sm' | 'md' | 'lg';
  };
  showOverlay?: boolean;
  enableLightbox?: boolean;
  class?: string;
  zone?: string;
}

const {
  images,
  layout = {
    columns: { mobile: 1, tablet: 2, desktop: 3 },
    maxImages: 6,
    aspectRatio: 'landscape',
    gap: 'md'
  },
  showOverlay = true,
  enableLightbox = false,
  class: customClass = '',
  zone = ''
} = Astro.props;

// Process images
const processedImages = Array.isArray(images) && typeof images[0] === 'string' 
  ? (images as string[]).map((src, index) => ({
      src,
      alt: `${zone} imagen ${index + 1}`,
      title: zone ? `${zone} - ${index + 1}` : undefined,
      description: undefined
    }))
  : images as Array<{src: string; alt: string; title?: string; description?: string}>;

const displayImages = layout.maxImages ? processedImages.slice(0, layout.maxImages) : processedImages;

// Grid classes
const getGridClasses = () => {
  const { mobile, tablet, desktop } = layout.columns;
  const imageCount = displayImages.length;
  
  const actualMobile = Math.min(mobile, imageCount);
  const actualTablet = Math.min(tablet, imageCount);
  const actualDesktop = Math.min(desktop, imageCount);
  
  return `grid grid-cols-${actualMobile} md:grid-cols-${actualTablet} lg:grid-cols-${actualDesktop}`;
};

const gapClasses = {
  sm: 'gap-2',
  md: 'gap-4',
  lg: 'gap-6'
};

const aspectRatioClasses = {
  square: 'aspect-square',
  portrait: 'aspect-[3/4]',
  landscape: 'aspect-[4/3]',
  auto: ''
};

const galleryId = `gallery-${Math.random().toString(36).substr(2, 9)}`;
---

<div class={`w-full ${customClass}`} data-gallery={galleryId}>
  <div class={`${getGridClasses()} ${gapClasses[layout.gap || 'md']}`}>
    {displayImages.map((image, index) => (
      <div 
        class={`relative overflow-hidden rounded-lg shadow-md hover:shadow-lg transition-all duration-300 group ${aspectRatioClasses[layout.aspectRatio || 'landscape']}`}
      >
        <!-- Optimized responsive image using picture -->
        <picture class="w-full h-full">
          <source 
            srcset={(() => {
              const pathParts = image.src.split('/');
              const fileName = pathParts[pathParts.length - 1];
              const baseName = fileName.replace('-quality.webp', '').replace('-display.webp', '').replace('-large.webp', '').replace('-medium.webp', '').replace('-small.webp', '').replace('.webp', '');
              const zone = pathParts[pathParts.length - 3];
              return `
                /images/spaces/${zone}/webp/${baseName}-small.webp 400w,
                /images/spaces/${zone}/webp/${baseName}-medium.webp 800w,
                /images/spaces/${zone}/webp/${baseName}-large.webp 1200w
              `;
            })()}
            sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, (max-width: 1200px) 33vw, 428px"
            type="image/webp"
          />
          <img 
            src={(() => {
              const pathParts = image.src.split('/');
              const fileName = pathParts[pathParts.length - 1];
              const baseName = fileName.replace('-quality.webp', '').replace('-display.webp', '').replace('-large.webp', '').replace('-medium.webp', '').replace('-small.webp', '').replace('.webp', '');
              const zone = pathParts[pathParts.length - 3];
              return `/images/spaces/${zone}/webp/${baseName}-medium.webp`;
            })()}
            alt={image.alt}
            class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
            loading={index < 4 ? "eager" : "lazy"}
            style="object-position: center;"
          />
        </picture>
        
        <!-- Overlay con información -->
        {showOverlay && (image.title || image.description) && (
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <div class="absolute bottom-0 left-0 right-0 p-4">
              {image.title && (
                <h3 class="text-white text-lg font-bold mb-1 font-outfit">
                  {image.title}
                </h3>
              )}
              {image.description && (
                <p class="text-white/90 text-sm line-clamp-2">
                  {image.description}
                </p>
              )}
            </div>
          </div>
        )}

        <!-- Botón de lightbox -->
        {enableLightbox && (
          <button
            type="button"
            class="absolute top-2 right-2 w-8 h-8 bg-black/50 hover:bg-black/70 text-white rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-300"
            onclick={`openLightbox('${image.src}', '${image.alt}')`}
            aria-label={`Ver imagen ${index + 1} en pantalla completa`}
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7" />
            </svg>
          </button>
        )}
      </div>
    ))}
  </div>

  <!-- Lightbox Modal -->
  {enableLightbox && (
    <div 
      id="lightbox"
      class="fixed inset-0 bg-black/90 z-50 flex items-center justify-center opacity-0 invisible transition-all duration-300"
    >
      <div class="relative max-w-5xl max-h-[95vh] mx-4">
        <button
          type="button"
          class="absolute top-4 right-4 z-60 w-10 h-10 bg-white/20 hover:bg-white/30 text-white rounded-full flex items-center justify-center transition-colors duration-200"
          onclick="closeLightbox()"
          aria-label="Cerrar imagen"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
        
        <!-- High quality image for lightbox -->
        <img 
          id="lightbox-img"
          src=""
          alt=""
          class="max-w-full max-h-full object-contain rounded-lg"
          loading="lazy"
        />
      </div>
    </div>
  )}
</div>

{enableLightbox && (
  <script is:inline>
    function getLargeImageSrc(originalSrc) {
      const pathParts = originalSrc.split('/');
      const fileName = pathParts[pathParts.length - 1];
      const baseName = fileName.replace('-quality.webp', '').replace('-display.webp', '').replace('-large.webp', '').replace('-medium.webp', '').replace('-small.webp', '').replace('.webp', '');
      const zone = pathParts[pathParts.length - 3];
      
      return `/images/spaces/${zone}/webp/${baseName}-xlarge.webp`;
    }
    
    function openLightbox(src, alt) {
      const lightbox = document.getElementById('lightbox');
      const lightboxImg = document.getElementById('lightbox-img');
      
      if (lightbox && lightboxImg) {
        lightboxImg.src = getLargeImageSrc(src);
        lightboxImg.alt = alt;
        
        lightbox.classList.remove('opacity-0', 'invisible');
        document.body.style.overflow = 'hidden';
      }
    }
    
    function closeLightbox() {
      const lightbox = document.getElementById('lightbox');
      
      if (lightbox) {
        lightbox.classList.add('opacity-0', 'invisible');
        document.body.style.overflow = '';
      }
    }
    
    // Close on ESC key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        closeLightbox();
      }
    });
    
    // Close on click outside
    document.addEventListener('click', function(e) {
      const lightbox = document.getElementById('lightbox');
      if (e.target === lightbox) {
        closeLightbox();
      }
    });
  </script>
)}