---
/**
 * StudioGalleryHero - Galer√≠a hero con enlaces a secciones
 */

const galleryImages = [
  { src: '/images/spaces/cyclorama/webp/DSC09112-large.webp', zone: 'Ciclorama', link: '#cyclorama' },
  { src: '/images/spaces/creative-studio/webp/DSC08939-large.webp', zone: 'Creative Studio', link: '#creative-studio' },
  { src: '/images/spaces/colores/webp/DSC09161-large.webp', zone: 'Fondos de Colores', link: '#color-backgrounds' },
  { src: '/images/spaces/black-zone/webp/DSC09203-large.webp', zone: 'Black Zone', link: '#black-zone' }
];
---

<section class="py-8 md:py-12 bg-white">
  <div class="container mx-auto container-padding">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      {galleryImages.map((image, index) => (
        <a
          href={image.link}
          class="studio-card group relative cursor-pointer block"
        >
          <div class="relative h-[200px] md:h-[350px] rounded-2xl overflow-hidden">
            <img
              src={image.src}
              alt={image.zone}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
              loading={index < 2 ? 'eager' : 'lazy'}
            />
            <!-- Overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent">
              <div class="absolute bottom-4 left-4">
                <span class="text-white font-medium">{image.zone}</span>
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .studio-card {
    animation: cardFade 0.5s ease-out forwards;
    opacity: 0;
  }
  .studio-card:nth-child(1) { animation-delay: 0s; }
  .studio-card:nth-child(2) { animation-delay: 0.1s; }
  .studio-card:nth-child(3) { animation-delay: 0.15s; }
  .studio-card:nth-child(4) { animation-delay: 0.2s; }

  @keyframes cardFade {
    from { opacity: 0; transform: scale(0.95); }
    to { opacity: 1; transform: scale(1); }
  }
</style>
